{
  "git": {
    "push": true,
    "commit": true,
    "commitMessage": "chore: update to v${version}",
    "requireCommits": true,
    "tagAnnotation": "${version}",
    "requireBranch": "main"
  },
  "github": {
    "release": true
  },
  "npm": {
    "skipChecks": true,
    "tag": "latest",
    "ignoreVersion": true
  }
}
